<Window x:Class="Z6O9JF_HFT_2021221.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Z6O9JF_HFT_2021221.WPFClient"
        xmlns:vm="clr-namespace:Z6O9JF_HFT_2021221.WPFClient.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel></vm:MainWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Cars}" SelectedItem="{Binding SelectedCar}" Grid.Column="0" HorizontalContentAlignment="Stretch">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding Vin}" Grid.Column="0"></Label>
                        <Label Content="{Binding OwnerId}" Grid.Column="1"></Label>
                        <Label Content="{Binding BrandId}" Grid.Column="2"></Label>
                        <Label Content="{Binding MechanicId}" Grid.Column="3"></Label>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch">
            <Button Content="Add" Margin="10" FontSize="20" Command="{Binding AddCommand}"></Button>
            <Button Content="Remove" Margin="10" FontSize="20" Command="{Binding RemoveCommand}"></Button>
            
        </StackPanel>
        
        
        
    </Grid>
</Window>
